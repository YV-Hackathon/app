<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all HTTPS connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust preinstalled CAs -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- For development/debugging, you can add specific domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">fastapi-cms-dev-111290968917.us-central1.run.app</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>

